mixin whitepaperCards(src, alt, categ1, categ2, card_heading, card_des, publistStatus, publishDate)
    a(href="whitepaper-details.html").vm-thumbnail
        .vm-thumbnail__view
            img.img354x250.img-fit(src=src alt= img_alt)
        .vm-thumbnail__body
            .vm-cate-list
                .vm-cate-list__item= categ1
                .vm-cate-list__item= categ2
            
            h5.vm-thumbnail__heading= card_heading
            p.vm-thumbnail__des= card_des

            .vm-ar-publish-info.fnt-xs
                span= publistStatus
                span= publishDate
